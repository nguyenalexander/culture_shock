<% include ../partials/header-auth.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-6">
          <h1 class="signup-titles">rate your fluency</h1>
          <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
          <form method="post" class="form" action="/auth/signup/facebook/2">
            <% languages.forEach(function(language){%>
            <div class="language item">
                <h2 class="signup-titles"><%=language.name%></h2>
                <label for="language" class="language-name">Reading/Writing Fluency</label>
                <input type="hidden" name="language" value="<%= language.id %>">
                <input type="range" name="wr_fluency_<%= language.id %>" min="0" max="10" value="0" step="1" list="language-ticks">
                <datalist id="language-ticks">
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                </datalist>
                <label for="language" class="language-name">Speaking Fluency</label>
                <input type="range" name="sp_fluency_<%= language.id %>" min="0" max="10" value="0" step="1" list="language-ticks">
                <datalist id="language-ticks">
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                </datalist>
            </div>
            <% }) %>
            <div class="btn-div">
            <input class="btn btn-default language-submit-btn" type="submit" value="Submit now">
            </div>
        </form>
        <div id="status">
        </div>
        </div>
<% include ../partials/footer.ejs %>