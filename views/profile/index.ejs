<% include ../partials/header-logged.ejs %>
<div class="row">
  <div class="col-md-2 col-xs-12">
  <img src="<%=imgUrl%>">
  </div>
  <div class="col-md-4 col-xs-12">
  <h2><%=user.username%></h2><a href="/profile/update"><span class="glyphicon glyphicon-pencil"></span></a>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6 col-xs-6">
  <div class="languages">
    <h2>Known Languages</h2>
    <ul class="language-list">
    <% languageData.forEach(function(language) { %>
      <li><%=language.name%>
        <ul>
        <li>Reading/Writing Fluency: <%=language.languagesusers.wr_fluency%>
            Speaking Fluency: <%=language.languagesusers.sp_fluency%></li>
            </ul>
      </li>
    <% }) %>
    </ul>
  </div>
  </div>
  <div class="col-md-6 col-xs-6">
    <div class="userData">
    <h4> About <%=user.username%></h4>
      <h5><%= profileData.bio %></h5>
    <h4><%=user.username%>'s interests</h4>
      <h5><%= profileData.hobbies %></h5>
    <h4><%=user.username%>'s contact information</h4>
      <h5><%= profileData.phone %></h5>
      <h5>Send <%=user.username%> an email!</h5>
      <a href="mailto:<%=userData.email%>?subject='Hey <%=userData.username%>! - speaktome'"><span class="glyphicon glyphicon-envelope"></span></a>
  </div>
  </div>
</div>

<% include ../partials/alerts.ejs %>
  <hr>
</div>
<% include ../partials/footer.ejs %>

