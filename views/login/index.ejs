<% include ../partials/header-auth.ejs %>
<div class="row signup-row">
  <div class="col-md-4 signup-col col-xs-12">
    <h2 class="signup-titles">login</h2>
    <hr>
    <form class="form" method="post" action="/auth/login">
      <input type="email" class="form-control" placeholder="Enter your e-mail" name="email">
      <hr class="hr-divider">
      <input type="password" class="form-control" placeholder="Enter your password" name="password">
      <hr>
      <input type="submit" value="sign up" class="btn btn-primary signup-btn">
    </form>
  </div>
  <div class="col-md-4 col-xs-12 signup-col signup-or">
    <hr>
    <h3 class="or"><em>or</em></h3>
    <hr>
  </div>
  <div class="col-md-4 col-xs-12 signup-col">
    <h2 class="signup-titles"> login with facebook </h2>
    <hr>
    <a href="/auth/login/facebook"><i class="fa fa-facebook-official fa-5x"></i></a>
  </div>
</div>
<% include ../partials/footer.ejs %>